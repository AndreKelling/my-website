{
  "name": "my-website",
  "version": "0.1.1",
  "description": "My personal website",
  "keywords": [
    "metalsmith",
    "homepage"
  ],
  "author": "me@andrekelling.de",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development NODE_PATH=./node_modules npm run watch & npm run serve",
    "build": "cross-env NODE_ENV=production node metalsmith.js",
    "watch": "nodemon metalsmith.js",
    "serve": "browser-sync start --server 'dist' --files 'dist/**'",
    "lint": "eslint --fix ."
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "templates"
    ],
    "ext": "js css scss njk json html md"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0"
  },
  "dependencies": {
    "@metalsmith/drafts": "^1.3.0",
    "@metalsmith/layouts": "^2.7.0",
    "@metalsmith/markdown": "^1.10.0",
    "@metalsmith/metadata": "^0.3.0",
    "@metalsmith/permalinks": "^2.5.1",
    "jstransformer-nunjucks": "^1.2.0",
    "metalsmith": "^2.6.2",
    "metalsmith-html-minifier": "^4.0.1",
    "metalsmith-if": "^0.1.1",
    "metalsmith-static-files": "^0.3.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
