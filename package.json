{
  "name": "my-website",
  "version": "7.4.0",
  "description": "My personal website",
  "keywords": [
    "metalsmith",
    "homepage"
  ],
  "repository": "git@github.com:AndreKelling/my-website.git",
  "license": "MIT",
  "author": "me@andrekelling.de",
  "scripts": {
    "images": "gulp images",
    "icons": "gulp svgsymbols",
    "watch": "gulp",
    "build": "gulp build",
    "build:prod": "cross-env NODE_ENV=production gulp buildProd",
    "build:metalsmith": "node metalsmith.mjs",
    "lint": "npm run lint:js & gulp stylelint",
    "lint:js": "npx @biomejs/biome lint src/js/**/*.js",
    "lint:stylelint": "stylelint 'src/scss/**/*.scss'",
    "lint:stylelint:fix": "stylelint 'src/scss/**/*.scss' --fix",
    "serve": "browser-sync start --server 'dist' --files 'dist/**' --no-open",
    "start": "cross-env NODE_ENV=development NODE_PATH=./node_modules npm run watch & npm run serve"
  },
  "browserslist": [
    "defaults and fully supports es6-module",
    "maintained node versions"
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.29.0",
    "@biomejs/biome": "2.3.14",
    "@metalsmith/collections": "^2.0.0",
    "@metalsmith/drafts": "^1.3.0",
    "@metalsmith/layouts": "^3.0.0",
    "@metalsmith/markdown": "^1.10.0",
    "@metalsmith/metadata": "^0.3.0",
    "@metalsmith/permalinks": "^3.2.0",
    "autoprefixer": "^10.4.24",
    "babelify": "^10.0.0",
    "browser-sync": "^3.0.4",
    "browserify": "^17.0.1",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "dotenv": "^17.2.3",
    "glob": "^13.0.1",
    "gulp": "^5.0.1",
    "gulp-noop": "^1.0.1",
    "gulp-postcss": "^10.0.0",
    "gulp-sass": "^6.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-symbols": "^3.2.3",
    "gulp-svgmin": "^4.1.0",
    "gulp-uglify": "^3.0.2",
    "imagemin": "^9.0.1",
    "imagemin-jpeg-recompress": "^7.1.0",
    "imagemin-pngquant": "^10.0.0",
    "jstransformer-nunjucks": "^1.2.0",
    "metalsmith": "^2.6.3",
    "metalsmith-html-minifier": "^4.0.1",
    "metalsmith-if": "^1.0.0",
    "metalsmith-static-files": "^2.0.0",
    "penthouse": "^2.3.3",
    "prettier": "^3.8.1",
    "sass": "^1.97.3",
    "sharp": "^0.34.5",
    "stylelint": "^17.1.1",
    "stylelint-config-standard-scss": "^17.0.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
